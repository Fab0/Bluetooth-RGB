<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/fragment0"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#191919"
android:orientation="vertical" >

    <Button
        android:id="@+id/Button_get_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Button_get_time" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:weightSum="2" >

     <Button
         android:id="@+id/Button_fade"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/button_fade_color" />

     <Button
         android:id="@+id/Button_jump"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/button_jump_color" />

     <Button
         android:id="@+id/Button_pulse"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/button_pulse_color" />



   </LinearLayout>
  <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:weightSum="2" >
          <Button
         android:id="@+id/button_hsv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/button_static_color" />
        </LinearLayout>
  <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:weightSum="2" >

      <Button
          android:id="@+id/Button_fade_out"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/button_fade_out" />

      <Button
          android:id="@+id/Button_fade_in"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/button_fade_in" />
    
     <Button
         android:id="@+id/Button_set_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/button_set_time" />
    </LinearLayout>
    
 <TextView
     android:id="@+id/textView1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/speed"
     android:textAppearance="?android:attr/textAppearanceLarge"
     android:textColor="#FFFFFF" />

 <SeekBar
     android:id="@+id/seekBar_speed"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp"
     android:max="255"
     android:progress="122" />

</LinearLayout>