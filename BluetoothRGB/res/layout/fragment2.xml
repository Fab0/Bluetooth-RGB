<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/fragment2"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#191919"
android:orientation="vertical" >
    
    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/rgb"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="2" >
     
    <com.fab.bluetoothrgb.VerticalSeekBar
        android:id="@+id/verticalSeekBar_red"
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        android:max="255"
        android:progress="50" 
         android:progressDrawable="@drawable/red_progress"/>

    <EditText
        android:id="@+id/editText_red"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" >

    </EditText>

    <com.fab.bluetoothrgb.VerticalSeekBar
        android:id="@+id/verticalSeekBar_green"
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        android:max="255"
        android:progress="50" 
         android:progressDrawable="@drawable/green_progress"/>
    
    <EditText
        android:id="@+id/editText_green"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" >

    </EditText>
    
    <com.fab.bluetoothrgb.VerticalSeekBar
        android:id="@+id/verticalSeekBar_blue"
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        android:max="255"
        android:progress="50" 
         android:progressDrawable="@drawable/blue_progress"/>
    
       <EditText
           android:id="@+id/editText_blue"
           android:layout_width="55dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginRight="5dp"
           android:inputType="numberDecimal"
           android:maxLength="3"
           android:text="0"
           android:textColor="#FFFFFF"
           android:textColorHint="#FFFFFF" >

    </EditText>
   </LinearLayout>
   

   
</LinearLayout>