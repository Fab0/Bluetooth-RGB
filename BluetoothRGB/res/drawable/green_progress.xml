<?xml version="1.0" encoding="utf-8"?>  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:id="@+id/id_green_background">  
        <shape>  
            <corners android:radius="3dip" />  
            <gradient  
                    android:startColor="#ff9d9e9d"  
                    android:centerColor="#ff5a5d5a"  
                    android:centerY="0.75"  
                    android:endColor="#ff747674"  
                    android:angle="270"  
            />  
        </shape>  
    </item>  
      
    <item android:id="@+id/id_green_secondaryprogress">  
        <clip>  
            <shape>  
                <corners android:radius="3dip" />  
                <gradient  
                        android:startColor="#80ffd300"  
                        android:centerColor="#80ffb600"  
                        android:centerY="0.75"  
                        android:endColor="#a0ffcb00"  
                        android:angle="270"  
                />  
            </shape>  
        </clip>  
    </item>  

    <item android:id="@+id/id_green_progress">  
        <clip>  
            <shape>  
                <corners  
                    android:radius="3dip" />  
                <gradient  
                        android:startColor="#82FA58"  
                        android:centerColor="#00FF00"  
                        android:centerY="0.75"  
                        android:endColor="#82FA58"  
                        android:angle="270"  
                />  
            </shape>  
        </clip>  
    </item>  
</layer-list>